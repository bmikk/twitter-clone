<section class="section">
  <div class="container">
    <div class="columns is-centered">

      <div class="column is-4">
        <h2 class="title is-3">Forgot Your Password?</h2>
      


        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>


          <div class="field">
            <div class="control">
              <%= f.input :email,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "new-password", class: "input" },
                          wrapper: false,
                          label_html: { class: "label" } %>
              </div>
            </div>

            <br />
            
            <div class="field">
              <div class="control">
                <%= f.button :submit, "Reset Password", class: "button is-info" %>
              </div>
            </div>
          

          

        <% end %>

        
        <br />

        <%= render "devise/shared/links" %>
        
      </div>
      
    </div>

    
  </div>
</section>