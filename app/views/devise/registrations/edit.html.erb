<section class="section">
  <div class="container">
    <div class="columns is-centered">

      <div class="column is-4">
        <h2 class="title is-2">Edit Account</h2>
      


      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      
        <div class="field">
          <div class="control">
            <%= f.input :name,
                        autofocus: true,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "input" },
                        wrapper: false,
                        label_html: { class: "label" } %>
            </div>
          </div>

        <div class="field">
          <div class="control">
            <%= f.input :username,
                        required: true,
                        input_html: { autocomplete: "new-password", class: "input" },
                        wrapper: false,
                        label_html: { class: "label" } %>
            </div>
          </div>

        <div class="field">
          <div class="control">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        input_html: { autocomplete: "new-password", class: "input" },
                        wrapper: false,
                        label_html: { class: "label" } %>
          </div>
        </div>

        <div class="field">
          <%= if devise_mapping_confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting on confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
        </div>


          
          <div class="field">
            <div class="control">
                <%= f.input :password,
                      required: false,
                      autocomplete: "off",
                      hint: "Leave it blank if you don't want to change it", ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { class: "input" },
                      wrapper: false,
                      label_html: { class: "label" } %>
            </div>
          <div>

          <div class="field">
            <div class="control">
              <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password", class: "input" },
                      wrapper: false,
                      label_html: { class: "label" } %>
            </div>
          <div>

          <br />
          
          <div class="field">
            <div class="control">
              <%= f.input :current_password, 
                          hint: "Please input your current password to confirm your changes", 
                          required: true,
                          input_html: { class: "input" },
                          wrapper: false,
                          label_html: { class: "label" } %>
            </div>
          </div>


        <%= f.button :submit, "Update", class: "button is-info" %>

      <% end %>

      </div>

      <%= render "devise/shared/links" %>

        <br />
        <h3 class="title is-5">Delete My Account</h3>
        <p>Unhappy? <%= link_to "Cancel Account", registration_path(resource_name), data: { confirm: "Are you sure? We'll miss you!" }, method: :delete %></p>

    </div>
  </div>
</section>
